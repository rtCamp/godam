{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "godam/gallery",
	"title": "GoDAM Video Gallery",
	"category": "media",
	"description": "Display a grid of GoDAM videos.",
	"keywords": ["video", "gallery", "grid", "videos"],
	"textdomain": "godam",
	"attributes": {
		"columns": {
			"type": "number",
			"default": 3
		},
		"count": {
			"type": "number",
			"default": 6
		},
		"orderby": {
			"type": "string",
			"default": "date"
		},
		"order": {
			"type": "string",
			"default": "DESC"
		},
		"layout": {
			"type": "string",
			"default": "grid"
		},
		"infiniteScroll": {
			"type": "boolean",
			"default": false
		},
		"category": {
			"type": "string",
			"default": ""
		},
		"tag": {
			"type": "string",
			"default": ""
		},
		"author": {
			"type": "number",
			"default": 0
		},
		"dateRange": {
			"type": "string",
			"default": ""
		},
		"customDateStart": {
			"type": "string",
			"default": ""
		},
		"customDateEnd": {
			"type": "string",
			"default": ""
		},
		"include": {
			"type": "string",
			"default": ""
		},
		"search": {
			"type": "string",
			"default": ""
		},
		"showTitle": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"anchor": true,
		"align": [ "left", "center", "right", "wide", "full" ],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorStyle": ["file:./index.css"],
	"editorScript": ["file:./index.js"],
	"render": "file:./render.php"
}
